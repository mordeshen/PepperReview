<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    toolbar with name("current cities") and 3 icons: refresh, icon to toggle,icon to toggle C/F, restore data to the original -->
    <!--recycler view represent all the cities-->
    <!--    searchview - filter in real time the list-->
    <!--    click on city open new screen about the city-->
    <!--    create another db to store the original data, and another to actual data-->
